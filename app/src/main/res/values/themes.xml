<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TugasPertemuan9" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">#464EdE</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:navigationBarColor">@color/white</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.TugasPertemuan9" parent="Base.Theme.TugasPertemuan9" />

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <!--Font-->
    <style name="ActivityTitle">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="NavText">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--Button-->
    <style name="Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Spinner-->
    <style name="Spinner" >
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>